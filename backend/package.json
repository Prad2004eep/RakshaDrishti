{
  "name": "rakshadrishti-backend",
  "version": "1.0.0",
  "description": "Backend API server for RakshaDrishti - Twilio SMS/WhatsApp integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "verify": "node verify-setup.js",
    "test": "node test-twilio.js",
    "test:otp": "node -e \"require('./test-twilio').testSendOTP()\"",
    "test:sms": "node -e \"require('./test-twilio').testSendSMS()\"",
    "test:whatsapp": "node -e \"require('./test-twilio').testSendWhatsApp()\""
  },
  "keywords": [
    "twilio",
    "sms",
    "whatsapp",
    "emergency",
    "sos"
  ],
  "author": "RakshaDrishti Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "twilio": "^5.10.3",
    "dotenv": "^17.2.3",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}

